<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane HBox.hgrow="ALWAYS" >
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <children>
                <VBox alignment="CENTER_LEFT" maxHeight="150.0" GridPane.columnIndex="0">
                    <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                    </stylesheets>
                    <padding>
                        <Insets bottom="5" left="15" right="5" top="5" />
                    </padding>

                    <children>
                        <HBox spacing="5" alignment="CENTER_LEFT">
                            <children>
                                <HBox>
                                    <Label fx:id="id" styleClass="cell_big_label"></Label>
                                    <TextFlow>
                                    	<children>
                                    		<Text fx:id="name" text="\$first" styleClass="cell_big_label"/>
                                    	</children>
                                    </TextFlow>
                                </HBox>
                            </children>
                        </HBox>
                        <VBox spacing="5" alignment="CENTER_LEFT">
                             <children>
                             	<Label fx:id="openTime" styleClass="cell_big_label" text="\$openTime" />
                             	<Label fx:id="closeTime" styleClass="cell_big_label" text="End: \$closeTime" />
                             </children>
                        </VBox>
                        <AnchorPane fx:id="tagsListPlaceholder" />
                    </children>
                </VBox>
            </children>
        </GridPane>
    </children>
</HBox>
